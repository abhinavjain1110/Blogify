<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">    
    <title>Homepage</title>
    <%- include('./partials/style') %>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class=" mt-3 row row-cols-4 mx-4" style="width: 95%; align-content: space-evenly;">
        <% blogs.forEach(blog => { %>
            <div class="container" style="box-shadow: inset;">
            <div class="col" style="display:grid; flex:content; ">
              <div class="card cs col card border-success " style="width: 20rem; max-height:20rem; border-width: 0.2rem;">
                <%- include('./partials/style') %>
                <img class="card-img-top" src="<%= blog.coverImageURL %>" alt="Card image cap" style="height: 10rem; border:1rem ;border-color: aliceblue; border-radius: 0.2rem;">
                <div class="card-body bg-dark">
                  <h5 class="card-title"> <%= blog.title %></h5>
                  <a href="/blog/<%= blog._id %>" class="btn btn-success">View</a>
                  <% if (locals.user) { %>
                    <a href="blog/edit/<%= blog._id %>" class="btn btn-success">Edit Blog</a>
                <% } %>
                </div>
              </div>
              </div>
              </div>
        <% }) %>
    </div>
    <%- include('./partials/script') %>
    <%- include('./partials/footer')%>
</body>
</html>