  <%- include('./style.ejs') %>

<nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark" role="navigation">
  <div class="container-fluid" style="font-weight: bold;">
    <a class="navbar-brand" href="/">Blogify</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item" style="font-weight: bold;">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <% if (locals.user) { %>
          <li class="nav-item" style="font-weight: bold;">
            <a class="nav-link" href="/blog/add-new">Add Blog</a>
          </li>
        <% } %>
      </ul>

      <ul class="navbar-nav mb-2 mb-lg-0" style="margin-right: 1.5cm;">
        <% if (locals.user) { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="true">
              <%= user.name %>
            </a>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="/user/logout" style="font-weight: bold;">Logout</a>
              </li>
            </ul>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/user/signup">Create Account</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/signin">Signin</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<% if (locals.error) { %>
  <div class="container mt-4">
    <div class="alert alert-danger" role="alert">
      <%= locals.error %>
    </div>
  </div>
<% } %>
